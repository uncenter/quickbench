{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"paths": {
			"~/*": ["*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "**/node_modules/*"]
}
